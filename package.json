{
  "name": "@doubletrade/dt-datatable",
  "version": "0.1.0",
  "description": "dt-datatable is a material design implementation of a data table, powered by lit-element.",
  "main": "dt-datatable.js",
  "scripts": {
    "lint": "eslint . --ext js,ts --ignore-path .gitignore --quiet",
    "prepublishOnly": "npm run lint && npm run build",
    "serve": "wds",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "wtr",
    "test:watch": "wtr --watch"
  },
  "files": [
    "*.js",
    "**/*.js",
    "*.d.ts",
    "**/*.d.ts"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@material/mwc-textfield": "^0.20.0",
    "fast-equals": "^2.0.0",
    "lit-element": "^2.4.0",
    "lit-html": "^1.3.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.14.1",
    "@open-wc/testing": "^2.5.32",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@web/dev-server": "^0.1.8",
    "@web/dev-server-esbuild": "^0.2.11",
    "@web/test-runner": "^0.12.15",
    "@web/test-runner-saucelabs": "^0.5.0",
    "eslint": "^7.21.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-plugin-import": "^2.22.1",
    "npm-check-updates": "^11.1.10",
    "sinon": "^9.2.4",
    "typescript": "^4.2.3"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-typescript/base"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "rules": {
      "class-methods-use-this": "off"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DoubleTrade/dt-datatable"
  },
  "type": "module",
  "publishConfig": {
    "access": "public"
  }
}
